<% content_for :title, "Reset Password" %>
<div style="text-align:center;">
  <div class="ui-widget box" style="display:inline-block; text-align:left;">
    <div>
      <%= form_for(resource_name, resource, :url => password_path(resource_name)) do |f| %>
        <%= f.error_messages %>

        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, :class => "text ui-corner-all ui-widget-content" %>
        </div>

        <div class="field">
          <%= f.submit "Send me reset password instructions", :class => "ui-corner-all ui-state-default button" %>
        </div>
      <% end %>
    </div>

    <div>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>
