<div style="text-align:center;">
  <div class="ui-widget ui-corner-top box" style="display:inline-block; text-align:left;">
    <h1><strong>Login</strong></h1>

    <div>
      <%= form_for(resource_name, resource, :url => session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username, :class => "text ui-corner-all ui-widget-content" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, :class => "text ui-corner-all ui-widget-content" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display:inline;" %>
          </div>
        <% end %>

        <div class="field">
          <%= f.submit "Sign in", :class => "ui-corner-all ui-state-default button" %>
        </div>
      <% end %>
    </div>

    <div style="padding:0 3em 1em;">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>
