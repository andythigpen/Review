<%# render the current mailbox %>
$("#dashboard-right-contents").html('<%= escape_javascript(render(:partial => "#{template}", :locals => { :reviews => reviews })) %>');

template_type = "<%= template %>";

<%# update all the mailbox counts %>
<% filters.keys.each do |f| %>
  <% r = self.instance_variable_get("@#{f}_count") %>
  <% if !r.nil? %>
    <% if r > 0 %>
      $("[data-filter=<%= f %>] .size").html("<%= r %>");
    <% else %>
      $("[data-filter=<%= f %>] .size").html("");
    <% end %>
  <% end %>
<% end %>
